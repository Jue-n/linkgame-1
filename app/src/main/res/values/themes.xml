<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/touming</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!--开始游戏的按钮-->
    <style name="StartButton">
        <item name="android:background">@drawable/startgame</item>
        <item name="android:button">@null</item>
    </style>

    <!--排行榜的按钮-->
    <style name="RankListBut">
        <item name="android:background">@drawable/ranklist</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--音效-->
    <style name="gamesound">
        <item name="android:background">@drawable/gamesound</item>
    </style>

</resources>